{
  "$anchor": "trickle-article",
  "$schema": "http://json-schema.org/draft/2019-09/schema#",
  "type": "object",
  "$merge": {
    "source": {
      "$ref": "article"
    },
    "with": {
      "properties": {
        "_trickle": {
          "type": "object",
          "title": "Trickle",
          "default": {},
          "required": [
            "_scrollDuration"
          ],
          "properties": {
            "_isEnabled": {
              "type": "boolean",
              "title": "Enable Trickle",
              "default": false
            },
            "_autoScroll": {
              "type": "boolean",
              "title": "Scroll Automatically",
              "default": false
            },
            "_scrollDuration": {
              "type": "number",
              "title": "Scroll Duration",
              "description": "Duration of the scroll animation in milliseconds",
              "default": 500
            },
            "_onChildren": {
              "type": "boolean",
              "title": "Enable on Child Blocks",
              "description": "Set to false on the article to use trickle at article level",
              "default": false
            },
            "_scrollTo": {
              "type": "string",
              "title": "Scroll To",
              "description": "Set how trickle scrolls",
              "default": "@block +1"
            },
            "_button": {
              "type": "object",
              "title": "Button Attributes",
              "default": {},
              "required": [
                "_styleBeforeCompletion",
                "_styleAfterClick"
              ],
              "properties": {
                "_isEnabled": {
                  "type": "boolean",
                  "title": "Enabled",
                  "default": false
                },
                "_styleBeforeCompletion": {
                  "type": "string",
                  "title": "Initial Visibility",
                  "description": "Set button visibility before completion",
                  "default": "hidden",
                  "enum": [
                    "hidden",
                    "visible"
                  ],
                  "_backboneForms": "Select"
                },
                "_styleAfterClick": {
                  "type": "string",
                  "title": "Final Visibility",
                  "description": "Set button visibility after completion",
                  "default": "hidden",
                  "enum": [
                    "hidden",
                    "disabled",
                    "scroll"
                  ],
                  "_backboneForms": "Select"
                },
                "_isFullWidth": {
                  "type": "boolean",
                  "title": "Full Width",
                  "default": true
                },
                "_autoHide": {
                  "type": "boolean",
                  "title": "Hide on Scroll",
                  "description": "Hides the button when it scrolls from view; not recommended for use in courses that need to be screenreader compatible.",
                  "default": false
                },
                "_className": {
                  "type": "string",
                  "title": "Custom Classes",
                  "default": ""
                },
                "_hasIcon": {
                  "type": "boolean",
                  "title": "Enable button icon",
                  "description": "Displays an icon alongside, or in place of, the Trickle button text. Default icon is a small downwards arrow",
                  "default": false
                },
                "text": {
                  "type": "string",
                  "title": "Button Text",
                  "default": "Continue",
                  "_adapt": {
                    "translatable": true
                  }
                },
                "startText": {
                  "type": "string",
                  "title": "First Button Text",
                  "description": "Only on articles when 'Enable on Child Blocks' set to true",
                  "default": "Begin",
                  "_adapt": {
                    "translatable": true
                  }
                },
                "finalText": {
                  "type": "string",
                  "title": "Final Button Text",
                  "description": "Only on articles when 'Enable on Child Blocks' set to true",
                  "default": "Finish",
                  "_adapt": {
                    "translatable": true
                  }
                },
                "_component": {
                  "type": "string",
                  "title": "Trickle Plugin",
                  "default": "trickle-button"
                }
              }
            },
            "_stepLocking": {
              "type": "object",
              "title": "Step Locking Attributes",
              "default": {},
              "properties": {
                "_isEnabled": {
                  "type": "boolean",
                  "title": "Enabled",
                  "default": true
                },
                "_isCompletionRequired": {
                  "type": "boolean",
                  "title": "Completion Required",
                  "default": true
                },
                "_isLockedOnRevisit": {
                  "type": "boolean",
                  "title": "Locked On Revisit",
                  "default": false
                }
              }
            }
          }
        }
      }
    }
  }
}
